<?xml version="1.0" encoding="UTF-8"?>

<!-- 告知SpringMVC生产那些组件 -->
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:mvc="http://www.springframework.org/schema/mvc"
        xmlns:context="http://www.springframework.org/schema/context"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
							http://www.springframework.org/schema/mvc
							http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <!-- 扫描所有Controller中的注解 -->
    <context:component-scan base-package="com.demo.controller"/>

    <!-- 注解解析驱动 -->
    <mvc:annotation-driven>
        <!-- 替换json序列化方案为fastjson -->
        <mvc:message-converters>
            <bean class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>applicationContext/json</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <!-- 视图解析器 -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- 静态资源访问设置 -->
    <mvc:default-servlet-handler/>

    <!-- 拦截器 -->
    <mvc:interceptors>
        <mvc:interceptor>
            <!-- 1.定义拦截器路径 -->
            <mvc:mapping path="/article/*,/chapter/*,/counter/*,/lesson/*,/menu/*,/roll/*,/special/*,/teacher/*,/user/*"/>

            <!-- 2.定义拦截器 -->
            <bean class="com.demo.intercepter.DemoIntercepter"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- 异常管理 -->
    <!--<bean class="com.demo.exception.CMFZException"/>-->

    <!-- 上传解析器配置 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!-- 设置上传文件最大值,默认不限制大小,为-1,单位byte -->
        <property name="maxUploadSize" value="-1"/>
    </bean>

</beans>
